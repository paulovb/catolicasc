<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF4500" />
            <stroke
                android:width="1dp"
                android:color="#ff5e1e" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF4500"
                android:endColor="#de3f00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#de3f00" />
        </shape>
    </item>
</selector>