<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3399FF"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- Registration Form -->

        <LinearLayout
            style="@style/btnStyleHaiti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- Name Label -->

            <EditText
                android:id="@+id/customer_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_name"
                android:singleLine="true">
                <requestFocus />
            </EditText>

            <!-- Name Label -->

            <EditText
                android:id="@+id/customer_cpf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_cpf"
                android:singleLine="true" />

            <!-- Email Label -->

            <EditText
                android:id="@+id/customer_mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_mail"
                android:singleLine="true" />

            <!-- Register Button -->

            <EditText
                android:id="@+id/customer_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6.90"
                android:ems="10"
                android:gravity="center_vertical|top"
                android:hint="@string/customer_description"
                android:inputType="textMultiLine"
                android:minEms="1"
                android:textAlignment="textStart" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp" >

                <Button
                    android:id="@+id/btn_customer_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.80"
                    android:background="@drawable/button_blue"
                    android:text="@string/save_button"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Registration Form Ends -->

    </RelativeLayout>

</ScrollView>